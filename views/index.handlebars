<!doctype html>

<html>
<head>
	<title>Mom&pop</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href='http://fonts.googleapis.com/css?family=Sniglet|Lily+Script+One|Ovo|Bitter' rel='stylesheet' type='text/css'>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/icomoon.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		
		<h1 class="logo-name"><a href="/"><span class="logo-mom">Mom</span><span class="logo-and">&</span><span class="logo-pop">pop</span></a></h1>

		<div class="row">
			{{#each items}}
				<div class="col-md-6 col-xs-6 center-block category">
					<a href="/category/{{url}}" class="row cat-link">
						<div class="cat-icon {{icon}}" style="background:url('images/cat_{{url}}.png') no-repeat center; background-size:contain"></div>
						{{name}}
					</a>
				</div>
			{{/each}}
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/script.js"></script>
</body>
</html>
