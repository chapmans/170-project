{{> header}}

<h1>Suggest a mom and pop store!</h1>

<form role="form" id="suggest-store" action="/suggest/send" method="POST">
	<div class="form-group">
		<label for="name">Store Name:</label>
		<input type="text" class="form-control" name="name" placeholder="Name">
	</div>
	<div class="form-group">
		<label for="name">Category:</label>
		<select class="form-control" name="category">
	  	<option {{#if coffee }}selected{{/if}}>Coffee</option>
	  	<option {{#if desserts }}selected{{/if}}>Desserts</option>
	  	<option {{#if restaurants }}selected{{/if}}>Restaurants</option>
		  <option {{#if clothing }}selected{{/if}}>Clothing</option>
		  <option {{#if trinkets }}selected{{/if}}>Trinkets</option>
		  <option {{#if music }}selected{{/if}}>Music</option>
		</select>
	</div>
	<div class="form-group">
		<label for="name">Address:</label>
		<input type="text" class="form-control" name="address" placeholder="Address (Optional)">
	</div>
	<div class="form-group">
		<label for="name">Store Information:</label>
		<textarea class="form-control" name="info"></textarea>
	</div>
	<input type="submit" class="btn btn-default" id="suggest-submit">
</form>

{{> footer}}